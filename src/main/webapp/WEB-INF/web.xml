<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Puskesmas Inventory</display-name>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.puskesmas.web.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ObatServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.ObatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObatServlet</servlet-name>
        <url-pattern>/obat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ObatMasukServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.ObatMasukServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObatMasukServlet</servlet-name>
        <url-pattern>/transaksi-masuk</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ObatKeluarServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.ObatKeluarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObatKeluarServlet</servlet-name>
        <url-pattern>/transaksi-keluar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/laporan</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GalleryServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.GalleryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GalleryServlet</servlet-name>
        <url-pattern>/gallery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SupplierServlet</servlet-name>
        <servlet-class>com.puskesmas.web.servlet.SupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupplierServlet</servlet-name>
        <url-pattern>/supplier</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
